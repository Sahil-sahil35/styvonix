---
export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  canonicalURL?: string;
}

const { 
  title, 
  description = "Premium filtration solutions for home, commercial, and industrial needs. Experience the future of clean water technology.",
  keywords = "water filtration, filter media,filter media calculator, activated carbon, silica sand, water treatment, purification systems",
  ogImage = "/images/logo/logo.png",
  canonicalURL = Astro.url.href
} = Astro.props;

const siteName = "Styvonix Future Pvt. Ltd.";
const fullTitle = title.includes(siteName) ? title : `${title} — ${siteName}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- SEO Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content={keywords}>
    <link rel="canonical" href={canonicalURL}>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content={canonicalURL}>
    <meta property="og:title" content={fullTitle}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={new URL(ogImage, Astro.url).href}>
    <meta property="og:site_name" content={siteName}>
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content={canonicalURL || Astro.url.href}>
    <meta property="twitter:title" content={fullTitle}>
    <meta property="twitter:description" content={description}>
    <meta property="twitter:image" content={new URL(ogImage, Astro.url).href}>
    
    <!-- Additional SEO -->
    <meta name="robots" content="index, follow">
    <meta name="author" content={siteName}>
    <meta name="theme-color" content="#e6b800">
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/logo/favicon.png">
    <link rel="apple-touch-icon" href="/images/logo/favicon.png">
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Playfair+Display:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <!-- Core Styles -->
    <link href="/styles/main.css" rel="stylesheet">
    <link href="/styles/listing.css" rel="stylesheet">
    <link href="/styles/product_details.css" rel="stylesheet">
    <link href="/styles/cart.css" rel="stylesheet">
    <link href="/styles/Blog.css" rel="stylesheet">
    <link href="/styles/about.css" rel="stylesheet">
    <link href="/styles/services.css" rel="stylesheet">

    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Styvonix Future Pvt. Ltd.",
      "url": "https://styvonix.com",
      "logo": "https://styvonix.com/images/logo/logo.png",
      "description": "Premium filtration solutions for home, commercial, and industrial needs.",
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+91-XXXXXXXXXX",
        "contactType": "customer service"
      }
    }
    </script>
</head>
<body>
    <!-- Header -->
    <header class="header" id="header">
        <div class="header-content">
            <a href="/" class="logo">
                <img src="/images/logo/logo.png" alt="Styvonix Logo" class="header-logo">
            </a>
            
            <nav class="nav">
                <a href="/">Home</a>
                <a href="/listing">Shop</a>
                <div class="nav-dropdown">
                    <a href="#categories">Categories</a>
                    <div class="desktop-categories-dropdown">
                        <!-- Populated by JavaScript -->
                    </div>
                </div>
                <a href="/services">Services</a>
                <a href="/blog">Blog</a>
                <a href="/about">About</a>
                <a href="#" class="js-contact-modal-trigger">Contact</a>
            </nav>

            <!-- Search Modal -->
            <div class="search-modal" id="searchModal">
                <div class="search-modal-content">
                    <span class="close-search">&times;</span>
                    <input type="text" id="searchInput" placeholder="Search products...">
                    <div id="searchResults"></div>
                </div>
            </div>
            
            <div class="header-icons">
                <button class="icon-btn search-btn">
                    <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                </button>
                <button class="icon-btn cart-btn">
                    <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                    </svg>
                    <span class="cart-count">0</span>
                </button>
                <button class="icon-btn mobile-menu">
                    <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                </button>
            </div>
        </div>
    </header>

    <!-- Mobile Navigation -->
    <div class="mobile-nav">
        <a href="/">Home</a>
        <a href="/listing">Shop</a>
        <div class="mobile-dropdown">
            <a href="javascript:void(0)" class="mobile-category-toggle">Categories</a>
            <div class="mobile-categories-dropdown">
                <!-- Populated by JavaScript -->
            </div>
        </div>
        <a href="/services">Services</a>
        <a href="/blog">Blog</a>
        <a href="/about">About</a>
        <a href="#" class="js-contact-modal-trigger">Contact</a>
    </div>

    <!-- Main Content -->
    <main>
        <slot />
    </main>

    <!-- Contact Modal -->
    <div class="modal" id="contactModal">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <h2>Contact Us: <span id="modalInquirySubject">Your Inquiry</span></h2>
            <form id="contactForm" action="https://formspree.io/f/xjkebdpo" method="POST">
                <div class="form-row">
                    <div class="form-group">
                        <label for="modalName">Your Name</label>
                        <input type="text" id="modalName" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="modalEmail">Email</label>
                        <input type="email" id="modalEmail" name="email" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="modalPhone">Phone Number (Optional)</label>
                    <input type="tel" id="modalPhone" name="phone">
                </div>
                <div class="form-group">
                    <label for="modalCategory">Inquiry Type</label>
                    <select id="modalCategory" name="inquiry_type" required>
                        <option value="" disabled selected>Select a category...</option>
                        <option value="General Inquiry">General Inquiry</option>
                        <option value="Bulk Order">Place a Bulk Order</option>
                        <option value="Technical Support">Technical Support</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="modalMessage">Message</label>
                    <textarea id="modalMessage" name="message" rows="4" required></textarea>
                </div>
                <button type="submit" class="btn-solid">Send Message</button>
            </form>
        </div>
    </div>

    <!-- Back to Top Button -->
    <button id="backToTopBtn" title="Go to top">▲</button>

    <div class="map-modal" id="mapModal">
        <div class="map-modal-content">
            <span class="close-map-modal">&times;</span>
            <div id="mapContainer"></div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer" id="contact">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Shop Links</h3>
                    <!-- Shop links will be populated by JavaScript -->
                </div>
                <div class="footer-section">
                    <h3>Categories</h3>
                    <!-- Categories will be populated by JavaScript -->
                </div>
                <div class="footer-section">
                    <h3>Contact Info</h3>
                    <!-- Contact info will be populated by JavaScript -->
                </div>
                <div class="footer-section">
                    <h3>Stay Connected</h3>
                    <p style="color: var(--text-muted); margin-bottom: 20px;">Subscribe to our newsletter for the latest products and offers.</p>
                    <div class="newsletter">
                        <input type="email" placeholder="Enter your email">
                        <button class="btn-primary">Subscribe</button>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <!-- Footer text will be populated by JavaScript -->
            </div>
        </div>
    </footer>

    <!-- Toast Notification -->
    <div class="toast" id="toast">Added to temporary cart — clears when you leave</div>
    <div id="productList" class="product-list"></div>

    <!-- Core JavaScript -->
    <script src="/js/main.js" is:inline></script>

