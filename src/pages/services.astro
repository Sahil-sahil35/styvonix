---
import Layout from '../layouts/Layout.astro';
import servicesData from '/public/data/services.json';

const allServices = servicesData.services || [];
---

<Layout 
    title="Services - Styvonix Future Pvt. Ltd."
    description="Comprehensive water filtration services including consultation, installation, maintenance, and custom solutions for residential, commercial, and industrial applications."
    keywords="water filtration services, installation services, maintenance, consultation, custom filtration solutions, technical support"
>
    <section class="blog-hero">
        <div class="blog-hero-bg"></div>
        <div class="blog-hero-overlay"></div>
        <div class="blog-hero-content">
            <h1 class="blog-title">Our Services</h1>
            <p class="blog-subtitle">Comprehensive Water Filtration and Purification Solutions</p>
            <div class="breadcrumb" aria-label="Breadcrumb">Home &gt; Services</div>
        </div>
    </section>

   <section class="service-content">
    <div class="container">
        <div class="service-controls">
        <div class="search-container">
            <input type="text" placeholder="Search services..." id="serviceSearch">
            <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
        </div>
        </div>

        <div class="service-grid card-grid" id="serviceGrid">
        {allServices.map(service => (
            <article 
                class="service-card" 
                data-title={service.title.toLowerCase()} 
                data-excerpt={service.excerpt.toLowerCase()}
                style="display: none;"
            >
                <div class="service-card-image">
                    <img src={service.imageUrl} alt={service.title} loading="lazy" />
                </div>
                <div class="service-card-content">
                    <h3>{service.title}</h3>
                    <p class="service-excerpt">{service.excerpt}</p>
                    <button class="btn-outline-product-detail service-contact-btn" data-id={service.id}>Inquire Now</button>

                    {service.tags && service.tags.length > 0 && (
                        <div class="tags-scroll-container">
                            <div class="product-tags">
                                {service.tags.map(tag => (
                                    <a href={`/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`} class="filter-chip">{tag}</a>
                                ))}
                            </div>
                        </div>
                    )}
                </div>
            </article>
        ))}
    </div>

        <div class="pagination" id="servicePagination"></div>
    </div>
    </section>


    <section class="section why-choose-section">
        <h2 class="section-title">Why Choose Our Services</h2>
        <div class="features-grid-services">
            <div class="feature-card-services">
                <div class="feature-icon-services">‚úì</div>
                <h3 class="feature-title-services">Fast Response</h3>
                <p class="feature-text-services">Quick response times for service calls and emergency support</p>
            </div>
            <div class="feature-card-services">
                <div class="feature-icon-services">üë•</div>
                <h3 class="feature-title-services">Expert Team</h3>
                <p class="feature-text-services">Certified professionals with extensive filtration experience</p>
            </div>
            <div class="feature-card-services">
                <div class="feature-icon-services">üèÜ</div>
                <h3 class="feature-title-services">Quality Guarantee</h3>
                <p class="feature-text-services">All services backed by our comprehensive quality guarantee</p>
            </div>
            <div class="feature-card-services">
                <div class="feature-icon-services">üí≤</div>
                <h3 class="feature-title-services">Competitive Pricing</h3>
                <p class="feature-text-services">Transparent, competitive pricing with no hidden costs</p>
            </div>
            <div class="feature-card-services">
                <div class="feature-icon-services">üïí</div>
                <h3 class="feature-title-services">24/7 Support</h3>
                <p class="feature-text-services">Round-the-clock technical support and emergency services</p>
            </div>
            <div class="feature-card-services">
                <div class="feature-icon-services">‚öôÔ∏è</div>
                <h3 class="feature-title-services">Custom Solutions</h3>
                <p class="feature-text-services">Tailored solutions designed for your specific needs</p>
            </div>
        </div>
    </section>

    <section class="service-cta">
        <div class="service-cta-bg"></div>
        <div class="service-cta-overlay"></div>
        <div class="container">
            <div class="service-cta-content">
                <h2>Have a Unique Requirement?</h2>
                <p>Contact our experts today for a custom-designed solution that fits your needs perfectly.</p>
                <a href="#" class="btn-primary js-contact-modal-trigger">Get in Touch</a>
            </div>
        </div>
    </section>

    <script src="/js/services.js" is:inline></script>
</Layout>

<style is:global>
    /* This selector is more specific to override the global style */
    .service-card .tags-scroll-container {
      overflow-x: auto;
      padding: 15px 0 5px 0;
      margin-top: auto;
      position: relative;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }
  
    .service-card .tags-scroll-container::-webkit-scrollbar {
        display: none;
    }
  
    .service-card .tags-scroll-container .product-tags {
      /* This is the key fix: it directly overrides 'flex-wrap: wrap;' */
      flex-wrap: nowrap; 
      white-space: nowrap; /* Kept for good measure */
      padding-bottom: 10px;
      display: flex;
      gap: 8px;
    }
    @keyframes scrollAnimation {
    from {
        transform: translateX(0);
    }
    to {
        transform: translateX(-500%);
    }
    }

    .autoscroll-tags .product-tags {
    /* Adjust animation duration here (e.g., 40s for slower) */
    animation: scrollAnimation 30s linear infinite;
    }

    .autoscroll-tags:hover .product-tags {
    animation-play-state: paused;
    }

</style>